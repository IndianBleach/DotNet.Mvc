@using Mvc.WebUi.ViewModels;
@model UserProfileViewModel;

@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}
<div class="container d-flex">
      <!---->
      <div
        id="preCheckOutIdea"
        class="z-100 position-fixed container d-flex justify-content-center"
      >
        <div
          class="z-100 col-12 d-flex justify-content-center"
          id="checkOutIdea"
        >
          <div
            id="inviteWindow"
            class="d-none z-100 overhide-window-xsm bg-darklight"
          >
            <div
              class="border-bottom align-items-center p-2 ps-3 pe-0 col-12 d-flex justify-content-between"
            >
              <span class="t-md text-white t-bold">Invite</span>
              <button
                class="showHideInvite btn btn-sm text-white t-sm t-semi-bold"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="26"
                  height="26"
                  fill="currentColor"
                  class="bi bi-x"
                  viewBox="0 0 16 16"
                >
                  <path
                    d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"
                  />
                </svg>
              </button>
            </div>
            <div class="col-12 ps-3 p-2">
              <div
                class="p-5 d-flex col-12 justify-content-center align-items-center"
              >
                <div class="">
                  <div class="d-flex align-items-center">
                      <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="50"
                    height="50"
                    fill="currentColor"
                    class="t-muted bi bi-reply"
                    viewBox="0 0 16 16"
                  >
                    <path
                      d="M6.598 5.013a.144.144 0 0 1 .202.134V6.3a.5.5 0 0 0 .5.5c.667 0 2.013.005 3.3.822.984.624 1.99 1.76 2.595 3.876-1.02-.983-2.185-1.516-3.205-1.799a8.74 8.74 0 0 0-1.921-.306 7.404 7.404 0 0 0-.798.008h-.013l-.005.001h-.001L7.3 9.9l-.05-.498a.5.5 0 0 0-.45.498v1.153c0 .108-.11.176-.202.134L2.614 8.254a.503.503 0 0 0-.042-.028.147.147 0 0 1 0-.252.499.499 0 0 0 .042-.028l3.984-2.933zM7.8 10.386c.068 0 .143.003.223.006.434.02 1.034.086 1.7.271 1.326.368 2.896 1.202 3.94 3.08a.5.5 0 0 0 .933-.305c-.464-3.71-1.886-5.662-3.46-6.66-1.245-.79-2.527-.942-3.336-.971v-.66a1.144 1.144 0 0 0-1.767-.96l-3.994 2.94a1.147 1.147 0 0 0 0 1.946l3.994 2.94a1.144 1.144 0 0 0 1.767-.96v-.667z"
                    />
                  </svg>
                  <img
                      src="~/media/userAvatars/@Model.User.AvatarImageName"
                      height="55"
                      width="55"
                      class="ms-3 circle border box-shadow"
                    />
                  </div>
                  <p
                    style="width: 170px;"
                    class="pt-3 mb-0 ps-2 t-lg t-semi-bold text-white"
                  >
                    Invite to your idea                    
                  </p>
                </div>
              </div>
              <div class="ps-4 pe-4">
                <form id="sendInviteForm">
                    <div>
                        <input name="model.InvitedUserGuid" value="@Model.User.Guid" hidden />
                    </div>
                    <div class="pb-2">
                    <select
                        name="model.InvitedToIdeaName"
                      class="custom-scroll form-select border radius-lg bg-dark t-muted t-md t-semi-bold form-control me-0 pe-1"
                      aria-label="Default select example"
                    >
                      @foreach (var item in Model.IdeasToInvite)
                      {
                        <option class="pt-1 pb-1 t-semi-bold" value="@item">@item</option>                     
                      }
                    </select>
                    <span class="t-sm t-medium t-muted">Choice idea to invite</span>
                  </div>
                  <div class="pb-2">
                    <textarea
                        name="model.Description"
                      style="resize: none; height: 66px;"
                      class="radius-lg bg-dark border text-white t-md t-semi-bold form-control me-0 pe-1"
                      placeholder="Write how you can help"
                      aria-label="Search"
                    ></textarea>
                  </div>
                  
                  <div class="border-top pb-4 pt-3 pt-4 col-12 text-center">
                    <button class="btn t-bold t-primary">Send</button>
                    <div class="t-sm t-muted t-medium">
                      Idea modders will accept your request
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!---->
      <div class="pe-3 pt-4 col">
        <aside>
          <div class="text-center mt-3">
            <img
              src="~/media/userAvatars/@Model.User.AvatarImageName"
              height="199"
              width="199"
              class="circle border box-shadow"
            />
          </div>
          <div class="mt-3 mb-2 text-center">
            <span class="t-xl t-xlight text-white">@Model.User.Name</span>
          </div>
          <div class="d-flex mt-3 align-items-center justify-content-center">
            @if (Model.IsSelfProfile)
            {
                <span class="t-muted t-md"><em>Your profile</em></span>
            }
            else
            {
                <div>
                  <a class="showHideBoxGoals icon-link-btn">Follow</a>
                </div>
                <div>
                  <button class="btn t-bold t-md t-primary">
                    Write
                  </button>
                </div>
            }

          </div>
          <div class="mt-4 text-start text-break">
              @if (Model.User.Description != null)
              { 
                <p class="t-md t-muted">
                    @Model.User.Description
                </p>
                }
                else
                {
                    <p class="t-md t-muted">
                        Roundile beginner
                    </p>
                }

          </div>
          <div class="mt-4">
            <h3 class="t-lg t-bold t-muted">Interests</h3>
            <div class="mt-2 d-flex flex-wrap">
              @foreach(var tag in Model.User.Tags)
              {
                <div class="t-tag me-1">
                    <a class="t-primary">@tag.Name</a>
                </div>
              }              
            </div>
          </div>
         @if (!Model.IsSelfProfile)
         {
             <div class="mt-4">
                <div class="mb-3">
                  <h3 class="t-lg t-bold t-muted">Can user help?</h3>
                </div>
                <div>
                  <a class="showHideInvite icon-link-btn">Invite</a>
                </div>
             </div>
         }  
        </aside>
      </div>
      <div class="col-9 pt-5">
        <main>
          <div class="col-12">
            <header>
              <div class="col-12 z-1 mt-3">
                <div class="p-3 d-flex">
                    <!---->
                  @if (Model.IsSelfProfile)
                  {
                    <div class="mb-2">
                    <a asp-action="@Model.User.Guid" asp-route-section="ideas" asp-controller="user" class="ideaSectionLink me-3 ideaSectionLink-active">
                      <span class="pe-1">
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          width="16"
                          height="16"
                          fill="currentColor"
                          class="t-muted bi bi-lightbulb"
                          viewBox="0 0 16 16"
                        >
                          <path
                            d="M2 6a6 6 0 1 1 10.174 4.31c-.203.196-.359.4-.453.619l-.762 1.769A.5.5 0 0 1 10.5 13a.5.5 0 0 1 0 1 .5.5 0 0 1 0 1l-.224.447a1 1 0 0 1-.894.553H6.618a1 1 0 0 1-.894-.553L5.5 15a.5.5 0 0 1 0-1 .5.5 0 0 1 0-1 .5.5 0 0 1-.46-.302l-.761-1.77a1.964 1.964 0 0 0-.453-.618A5.984 5.984 0 0 1 2 6zm6-5a5 5 0 0 0-3.479 8.592c.263.254.514.564.676.941L5.83 12h4.342l.632-1.467c.162-.377.413-.687.676-.941A5 5 0 0 0 8 1z"
                          />
                        </svg>
                      </span>
                      Ideas
                    </a>
                  </div>
                  <div class="mb-2">
                    <a asp-action="@Model.User.Guid" asp-route-section="edit" asp-controller="user" class="ideaSectionLink me-3">
                      <span class="pe-1">
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          width="16"
                          height="16"
                          fill="currentColor"
                          class="t-muted bi bi-sliders"
                          viewBox="0 0 16 16"
                        >
                          <path
                            fill-rule="evenodd"
                            d="M11.5 2a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3zM9.05 3a2.5 2.5 0 0 1 4.9 0H16v1h-2.05a2.5 2.5 0 0 1-4.9 0H0V3h9.05zM4.5 7a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3zM2.05 8a2.5 2.5 0 0 1 4.9 0H16v1H6.95a2.5 2.5 0 0 1-4.9 0H0V8h2.05zm9.45 4a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3zm-2.45 1a2.5 2.5 0 0 1 4.9 0H16v1h-2.05a2.5 2.5 0 0 1-4.9 0H0v-1h9.05z"
                          />
                        </svg>
                      </span>
                      Edit
                    </a>
                  </div>                  
                  }
                  else
                  {
                  
                    <div class="mb-2">
                    <a class="ideaSectionLink me-3 ideaSectionLink-active">
                      <span class="pe-1">
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          width="16"
                          height="16"
                          fill="currentColor"
                          class="t-muted bi bi-lightbulb"
                          viewBox="0 0 16 16"
                        >
                          <path
                            d="M2 6a6 6 0 1 1 10.174 4.31c-.203.196-.359.4-.453.619l-.762 1.769A.5.5 0 0 1 10.5 13a.5.5 0 0 1 0 1 .5.5 0 0 1 0 1l-.224.447a1 1 0 0 1-.894.553H6.618a1 1 0 0 1-.894-.553L5.5 15a.5.5 0 0 1 0-1 .5.5 0 0 1 0-1 .5.5 0 0 1-.46-.302l-.761-1.77a1.964 1.964 0 0 0-.453-.618A5.984 5.984 0 0 1 2 6zm6-5a5 5 0 0 0-3.479 8.592c.263.254.514.564.676.941L5.83 12h4.342l.632-1.467c.162-.377.413-.687.676-.941A5 5 0 0 0 8 1z"
                          />
                        </svg>
                      </span>
                      Ideas
                    </a>
                  </div>
                  }
                  <!---->
                </div>
              </div>
            </header>
            <div class="col-12 mt-1 ps-3 pe-3">
              @if (Model.UserIdeas.Count < 1)
              {
                <div class="warwin-md border mb-3 bg-dark col-12 radius-md">
                <div class="text-center">
                  <div class="mb-3">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="44"
                      height="44"
                      fill="currentColor"
                      class="bi t-muted bi-lightbulb"
                      viewBox="0 0 16 16"
                    >
                      <path
                        d="M2 6a6 6 0 1 1 10.174 4.31c-.203.196-.359.4-.453.619l-.762 1.769A.5.5 0 0 1 10.5 13a.5.5 0 0 1 0 1 .5.5 0 0 1 0 1l-.224.447a1 1 0 0 1-.894.553H6.618a1 1 0 0 1-.894-.553L5.5 15a.5.5 0 0 1 0-1 .5.5 0 0 1 0-1 .5.5 0 0 1-.46-.302l-.761-1.77a1.964 1.964 0 0 0-.453-.618A5.984 5.984 0 0 1 2 6zm6-5a5 5 0 0 0-3.479 8.592c.263.254.514.564.676.941L5.83 12h4.342l.632-1.467c.162-.377.413-.687.676-.941A5 5 0 0 0 8 1z"
                      />
                    </svg>
                  </div>
                  <p class="text-white t-xl t-bold">User doesnt have ideas</p>
                </div>
              </div>
              }
              else
              {
                @foreach(var idea in Model.UserIdeas)
              {
              <section>
                <div class="col-12 mb-3">
                  <div
                    style="
                      background: linear-gradient(
                          0deg,
                          rgba(0, 0, 0, 0.33),
                          rgba(0, 0, 0, 0.33)
                        ),
                        url('../media/ideaAvatars/@idea.AvatarImageName');
                      border-radius: 6px;
                    "
                    class="d-flex align-items-end idea-post bg-light"
                  >
                    <div class="pb-4 ps-4 pe-4 text-break col-12">
                      <div style="margin-bottom: 86px;" class="text-break">
                        <content>
                          <a asp-controller="idea" asp-action="@idea.Guid" asp- class="h1 t-xbold text-white t-shadow"
                            >@idea.Title</a
                          >
                          <p
                            class="col-10 t-bold t-muted t-shadow d-inline-block text-truncate"
                          >
                            @idea.Description
                          </p>
                        </content>
                      </div>
                      <div class="d-flex">
                        <div class="me-2 icon-link border">
                          <a class="t-muted t-semi-bold t-md">
                            <svg
                              xmlns="http://www.w3.org/2000/svg"
                              width="21"
                              height="21"
                              fill="currentColor"
                              class="bi bi-chat"
                              viewBox="0 0 16 16"
                            >
                              <path
                                d="M2.678 11.894a1 1 0 0 1 .287.801 10.97 10.97 0 0 1-.398 2c1.395-.323 2.247-.697 2.634-.893a1 1 0 0 1 .71-.074A8.06 8.06 0 0 0 8 14c3.996 0 7-2.807 7-6 0-3.192-3.004-6-7-6S1 4.808 1 8c0 1.468.617 2.83 1.678 3.894zm-.493 3.905a21.682 21.682 0 0 1-.713.129c-.2.032-.352-.176-.273-.362a9.68 9.68 0 0 0 .244-.637l.003-.01c.248-.72.45-1.548.524-2.319C.743 11.37 0 9.76 0 8c0-3.866 3.582-7 8-7s8 3.134 8 7-3.582 7-8 7a9.06 9.06 0 0 1-2.347-.306c-.52.263-1.639.742-3.468 1.105z"
                              />
                            </svg>
                            @idea.TotalCommentsCount
                          </a>
                        </div>
                        <div class="me-2 icon-link border">
                          <a class="t-muted t-semi-bold t-md">
                            <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" class="bi bi-boxes" viewBox="0 0 16 16">
                              <path d="M7.752.066a.5.5 0 0 1 .496 0l3.75 2.143a.5.5 0 0 1 .252.434v3.995l3.498 2A.5.5 0 0 1 16 9.07v4.286a.5.5 0 0 1-.252.434l-3.75 2.143a.5.5 0 0 1-.496 0l-3.502-2-3.502 2.001a.5.5 0 0 1-.496 0l-3.75-2.143A.5.5 0 0 1 0 13.357V9.071a.5.5 0 0 1 .252-.434L3.75 6.638V2.643a.5.5 0 0 1 .252-.434L7.752.066ZM4.25 7.504 1.508 9.071l2.742 1.567 2.742-1.567L4.25 7.504ZM7.5 9.933l-2.75 1.571v3.134l2.75-1.571V9.933Zm1 3.134 2.75 1.571v-3.134L8.5 9.933v3.134Zm.508-3.996 2.742 1.567 2.742-1.567-2.742-1.567-2.742 1.567Zm2.242-2.433V3.504L8.5 5.076V8.21l2.75-1.572ZM7.5 8.21V5.076L4.75 3.504v3.134L7.5 8.21ZM5.258 2.643 8 4.21l2.742-1.567L8 1.076 5.258 2.643ZM15 9.933l-2.75 1.571v3.134L15 13.067V9.933ZM3.75 14.638v-3.134L1 9.933v3.134l2.75 1.571Z"/>
                            </svg>
                            @idea.TotalBoxCount
                          </a>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="mt-2 d-flex flex-wrap">
                    @foreach(var tag in idea.Tags)
                    {
                        <div class="t-tag me-1">
                          <span class="t-primary">@tag.Name</span>
                        </div>
                    }
                  </div>
                </div>
              </section>
              }           

              <div class="d-flex">
                @foreach(var pageInfo in Model.Pages)
                {
                    <div class="me-1">
                        @if (pageInfo.IsActive)
                        {
                            <a disabled asp-action="index" asp-route-page="@pageInfo.NumberValue" class="disabled btn text-muted t-md t-semi-bold border">
                                @pageInfo.NumberValue
                            </a>
                        }
                        else
                        {
                            <a asp-action="@Model.User.Guid" asp-route-page="@pageInfo.NumberValue" class=" text-white btn t-md t-semi-bold border">
                                @pageInfo.NumberValue
                            </a>                    
                        }
                    </div>
                }
              </div>
              }
              
            </div>
          </div>
        </main>
      </div>
    </div>

@section Scripts {
            <script src="~/js/userScripts/inviteScript.js"></script>
    }
