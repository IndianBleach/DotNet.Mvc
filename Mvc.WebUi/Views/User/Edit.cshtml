@using Mvc.WebUi.ViewModels;
@model UserEditProfileViewModel;

@{
}


<div class="container d-flex">
      <!---->
      <div
        id="preCheckOutIdea"
        class="z-100 position-fixed container d-flex justify-content-center"
      >
        <div
          class="z-100 col-12 d-flex justify-content-center"
          id="checkOutIdea"
        >
          
        </div>
      </div>
      <!---->
      <div class="pe-3 pt-4 col position-relative">
        <div class="position-fixed">
            <aside>
          <div class="text-center mt-3">
            <img
              src="~/media/userAvatars/@Model.User.AvatarImageName"
              height="199"
              width="199"
              class="circle border box-shadow"
            />
          </div>
          <div class="mt-3 mb-2 text-center">
            <span class="t-xl t-xlight text-white">@Model.User.Name</span>
          </div>
          <div class="d-flex mt-3 align-items-center justify-content-center">
            <span class="t-muted t-md"><em>Your profile</em></span>
          </div>
          <div class="mt-4 text-start text-break">
            @if (Model.User.Description != null)
              { 
                <p class="t-md t-muted">
                    @Model.User.Description
                </p>
                }
                else
                {
                    <p class="t-md t-muted">
                        Roundile beginner
                    </p>
                }
          </div>
          <div class="mt-4">
            <h3 class="t-md t-semi-bold t-muted">Interests</h3>
            <div class="mt-2 d-flex flex-wrap">
              @foreach(var tag in Model.User.Tags)
              {
                <div class="t-tag me-1">
                    <a class="t-primary">@tag.Name</a>
                </div>
              }              
            </div>
            <div class="mt-4 text-center">
            <form asp-action="logout" asp-controller="account">
              <button type="submit" class="border col-12 radius-md btn text-danger t-md">
                Logout
              </button>
            </form>
            </div>
          </div>
        </aside>
        </div>
      </div>
      <div class="col-9 pt-5">
        <main>
          <div class="col-12">
            <header>
              <div class="col-12 z-1 mt-3">
                  <div class="d-flex p-3 pb-0">
                  <a asp-action="@Model.User.Guid" asp-route-section="subscribers" asp-controller="user" class="t-semi-bold t-muted t-md m-2">
                    Subscribers:
                    <span class="text-white t-lg">42</span>
                  </a>
                  <a asp-action="@Model.User.Guid" asp-route-section="followings" asp-controller="user" class="t-semi-bold t-muted t-md m-2">
                    Following:
                    <span class="text-white t-lg">42</span>
                  </a>
                </div>
                <div class="p-3 d-flex">
                    <!---->
                  <div class="mb-2">
                    <a asp-action="@Model.User.Guid" asp-route-section="ideas" asp-controller="user" class="ideaSectionLink me-3">
                      <span class="pe-1">
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          width="16"
                          height="16"
                          fill="currentColor"
                          class="t-muted bi bi-lightbulb"
                          viewBox="0 0 16 16"
                        >
                          <path
                            d="M2 6a6 6 0 1 1 10.174 4.31c-.203.196-.359.4-.453.619l-.762 1.769A.5.5 0 0 1 10.5 13a.5.5 0 0 1 0 1 .5.5 0 0 1 0 1l-.224.447a1 1 0 0 1-.894.553H6.618a1 1 0 0 1-.894-.553L5.5 15a.5.5 0 0 1 0-1 .5.5 0 0 1 0-1 .5.5 0 0 1-.46-.302l-.761-1.77a1.964 1.964 0 0 0-.453-.618A5.984 5.984 0 0 1 2 6zm6-5a5 5 0 0 0-3.479 8.592c.263.254.514.564.676.941L5.83 12h4.342l.632-1.467c.162-.377.413-.687.676-.941A5 5 0 0 0 8 1z"
                          />
                        </svg>
                      </span>
                      Ideas
                    </a>
                  </div>
                  <div class="mb-2">
                    <a asp-action="invites" asp-controller="user" class="ideaSectionLink me-3">
                      <span class="pe-1">
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          width="16"
                          height="16"
                          fill="currentColor"
                          class="t-muted bi bi-reply-all"
                          viewBox="0 0 16 16"
                        >
                          <path
                            d="M8.098 5.013a.144.144 0 0 1 .202.134V6.3a.5.5 0 0 0 .5.5c.667 0 2.013.005 3.3.822.984.624 1.99 1.76 2.595 3.876-1.02-.983-2.185-1.516-3.205-1.799a8.74 8.74 0 0 0-1.921-.306 7.404 7.404 0 0 0-.798.008h-.013l-.005.001h-.001L8.8 9.9l-.05-.498a.5.5 0 0 0-.45.498v1.153c0 .108-.11.176-.202.134L4.114 8.254a.502.502 0 0 0-.042-.028.147.147 0 0 1 0-.252.497.497 0 0 0 .042-.028l3.984-2.933zM9.3 10.386c.068 0 .143.003.223.006.434.02 1.034.086 1.7.271 1.326.368 2.896 1.202 3.94 3.08a.5.5 0 0 0 .933-.305c-.464-3.71-1.886-5.662-3.46-6.66-1.245-.79-2.527-.942-3.336-.971v-.66a1.144 1.144 0 0 0-1.767-.96l-3.994 2.94a1.147 1.147 0 0 0 0 1.946l3.994 2.94a1.144 1.144 0 0 0 1.767-.96v-.667z"
                          />
                          <path
                            d="M5.232 4.293a.5.5 0 0 0-.7-.106L.54 7.127a1.147 1.147 0 0 0 0 1.946l3.994 2.94a.5.5 0 1 0 .593-.805L1.114 8.254a.503.503 0 0 0-.042-.028.147.147 0 0 1 0-.252.5.5 0 0 0 .042-.028l4.012-2.954a.5.5 0 0 0 .106-.699z"
                          />
                        </svg>
                      </span>
                      Invites
                    </a>
                  </div>
                  <div class="mb-2">
                    <a asp-action="edit" disabled asp-controller="user" class="ideaSectionLink me-3 ideaSectionLink-active">
                      <span class="pe-1">
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          width="16"
                          height="16"
                          fill="currentColor"
                          class="t-muted bi bi-sliders"
                          viewBox="0 0 16 16"
                        >
                          <path
                            fill-rule="evenodd"
                            d="M11.5 2a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3zM9.05 3a2.5 2.5 0 0 1 4.9 0H16v1h-2.05a2.5 2.5 0 0 1-4.9 0H0V3h9.05zM4.5 7a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3zM2.05 8a2.5 2.5 0 0 1 4.9 0H16v1H6.95a2.5 2.5 0 0 1-4.9 0H0V8h2.05zm9.45 4a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3zm-2.45 1a2.5 2.5 0 0 1 4.9 0H16v1h-2.05a2.5 2.5 0 0 1-4.9 0H0v-1h9.05z"
                          />
                        </svg>
                      </span>
                      Edit
                    </a>
                  </div>  
                  <!---->
                </div>
              </div>
            </header>
            <div class="col-12 mt-1 ps-3 pe-3">
              <section>
                <div class="col-10">
                  <form enctype="multipart/form-data" asp-action="updateGeneralSettings" asp-controller="user" method="post">
                    <div class="col-12 mt-4">
                      <div class="col offset-4">
                        <h3 class="t-md text-white t-bold">General settings</h3>
                      </div>
                      <div class="mt-3 col-12 d-flex">
                        <div class="col-4 text-end pe-4">
                          <label class="t-muted t-semi-bold t-md">
                            Avatar
                          </label>
                        </div>
                        <div class="d-flex col p-2 border radius-md upd-dark">
                          <div>
                            <input
                              name="model.NewAvatar"
                              style="background-image: url('/media/userAvatars/@Model.User.AvatarImageName');"
                              class="border upd-form-avatar-circle form-control"
                              type="file"
                              id="formFile"
                            />
                          </div>
                          <div class="ms-2 text-center overflow-hidden pt-4">
                            <svg
                              xmlns="http://www.w3.org/2000/svg"
                              width="26"
                              height="26"
                              fill="currentColor"
                              class="bi bi-image"
                              viewBox="0 0 16 16"
                            >
                              <path
                                d="M6.002 5.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z"
                              />
                              <path
                                d="M2.002 1a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V3a2 2 0 0 0-2-2h-12zm12 1a1 1 0 0 1 1 1v6.5l-3.777-1.947a.5.5 0 0 0-.577.093l-3.71 3.71-2.66-1.772a.5.5 0 0 0-.63.062L1.002 12V3a1 1 0 0 1 1-1h12z"
                              />
                            </svg>
                            <span
                              id="avatarPreRenderName"
                              class="t-md t-medium t-muted"
                              >Change avatar</span
                            >
                          </div>
                        </div>
                      </div>
                      <div class="mt-3 col-12 d-flex">
                        <div class="col-4 text-end pe-4">
                          <label class="t-muted t-semi-bold t-md">
                            Username
                          </label>
                        </div>
                        <div class="col">
                          <input
                            name="model.NewUsername"
                            class="upd-form-input form-control me-0 pe-1"
                            placeholder="@Model.User.Name"
                            aria-label="Search"
                          />
                        </div>
                      </div>
                      <div class="mt-3 col-12 d-flex">
                        <div
                          class="col-4 pe-4 justify-content-end d-flex align-items-center"
                        >
                          <label class="t-muted t-semi-bold t-md">
                            Description
                          </label>
                        </div>
                        <div class="col">
                          <textarea
                            name="model.NewDescription"
                            style="resize: none; height: 66px;"
                            class="upd-form-textarea form-control me-0 pe-1"
                            aria-label="Search"
                          ></textarea>
                        </div>
                      </div>
                      <div class="p-1 col-12">
                        <div class="mt-3 col-12 d-flex">
                          <div class="col-4 text-end pe-4">
                            <label class="t-muted t-semi-bold t-md">
                              Password
                            </label>
                          </div>
                          <div class="col">
                            <input
                                name="model.NewPassword"
                              placeholder="New"
                              type="password"
                              class="upd-form-input form-control me-0 pe-1"
                              aria-label="Search"
                            />
                          </div>
                        </div>
                        <div class="mt-3 col-12 d-flex">
                          <div class="col-4 text-end pe-4"></div>
                          <div class="col">
                            <input
                              name="model.OldPassword"
                              placeholder="Old"
                              type="password"
                              class="upd-form-input form-control me-0 pe-1"
                              aria-label="Search"
                            />
                            <span class="t-sm t-muted"
                              >To update password, enter old</span
                            >
                          </div>
                        </div>
                      </div>
                      <div class="mt-3 offset-4 col-12">
                        <button type="submit" class="ps-0 pe-0 btn t-bold t-md t-primary">
                          Save changes
                        </button>
                      </div>
                    </div>
                  </form>
                </div>
              </section>
              <section>
                <div class="col-12 d-flex justify-content-center">
                  <div class="col-10">
                    <form asp-action="updateTagSettings" asp-controller="user">
                        <div
                      class="mt-3 border justify-content-between align-items-center p-3 ps-4 pe-4 radius-lg mb-1 col-12 d-flex"
                    >
                      <div>
                        <h3 class="text-white t-md t-semi-bold">
                          Choice tags
                        </h3>
                        <p class="mb-0 t-muted t-sm">
                          Add idea goals
                        </p>
                      </div>
                      <div class="col-8">
                        <select
                          name="NewTags"
                          class="custom-scroll upd-form-select select-multiple form-control me-0 pe-1"
                          aria-label="Default select example"
                          multiple
                        >
                          @if (Model.TagList != null)
                          {
                            @foreach(var tag in Model.TagList)
                              {
                                <option class="pt-1 pb-1 t-semi-bold" value="@tag.Name">@tag.Name</option>
                              }  
                          }
                        </select>

                        <span class="t-muted t-sm"
                          >Use <kbd>ctrl</kbd> to select many</span
                        >
                      </div>
                    </div>
                    <div class="col-12">
                      <button type="submit" class="ps-0 pe-0 btn t-bold t-md t-primary">
                        Save changes
                      </button>
                    </div>
                    </form>
                  </div>
                </div>
              </section>
              <section>
                <div class="mt-2 col-12 d-flex justify-content-center">
                  <div class="col-10">
                    <div
                      class="mt-3 border justify-content-between align-items-center p-3 ps-4 pe-4 radius-lg mb-2 col-12 d-flex"
                    >
                      <div>
                        <h3 class="text-danger t-md t-semi-bold">
                          Remove idea
                        </h3>
                        <p class="mb-0 t-muted t-sm">
                          With all progress
                        </p>
                      </div>
                      <div class="col-8">
                        <form class="form-dark upd-dark form-lg">
                          <div class="col">
                            <input
                              placeholder="Confirm password"
                              type="password"
                              class="t-md upd-dark form-control"
                            />
                          </div>
                          <div>
                            <button class="btn t-bold t-md text-danger">
                              Remove
                            </button>
                          </div>
                        </form>
                      </div>
                    </div>
                  </div>
                </div>
              </section>
            </div>
          </div>
        </main>
      </div>
    </div>
