      src="https://code.jquery.com/jquery-3.6.0.min.js"
      integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
      crossorigin="anonymous"
    ></script>

    <!--custom styles-->
    <link rel="stylesheet" href="~/css/styleMain.css" />
    <link rel="stylesheet" href="~/css/loginPage/loginPage.css" />
    <link rel="stylesheet" href="~/css/forms.css" />
    <link rel="stylesheet" href="~/css/ideaDetail.css" />

    <title>@ViewData["Title"] - Roundile</title>
  </head>
  <body class="bg-darkdeep">
    <!--hider-->
    <div class="d-none position-fixed" id="hideBackgroundWrapper">
      <div
        style="margin-top: 6rem;"
        class="position-fixed col-12 d-flex justify-content-center"
      >
        <div id="checkOutContainer">
          <div
            id="windowStarred"
            class="d-none overhide-window-sm bg-darklight"
          >
            <div
              class="border-bottom align-items-center p-2 ps-3 pe-0 col-12 d-flex justify-content-between"
            >
              <span class="t-md text-white t-bold">Starred</span>
              <button
                class="showHideStarred btn btn-sm text-white t-sm t-semi-bold"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="26"
                  height="26"
                  fill="currentColor"
                  class="bi bi-x"
                  viewBox="0 0 16 16"
                >
                  <path
                    d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"
                  />
                </svg>
              </button>
            </div>
            <div style="height: 535px;" class="col-12 ps-3 p-2">
              <div
                class="starIdeaSection"
              >
                <a>
                  <img src="media/ideaAvatars/s.jpg" />
                  <span>
                    Online Fitness APP
                  </span>
                </a>
                <a class="icon-link t-muted t-semi-bold t-sm">
                  Unstar
                </a>
              </div>
            </div>
          </div>
          <div
            id="windowCreateIdea"
            class="d-none overhide-window-sm bg-darklight"
          >
            <div
              class="border-bottom align-items-center p-2 ps-3 pe-0 col-12 d-flex justify-content-between"
            >
              <span class="t-md text-white t-bold">New</span>
              <button
                class="showHideCreateIdea btn btn-sm text-white t-sm t-semi-bold"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="26"
                  height="26"
                  fill="currentColor"
                  class="bi bi-x"
                  viewBox="0 0 16 16"
                >
                  <path
                    d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"
                  />
                </svg>
              </button>
            </div>
            <div class="col-12 ps-3 p-2">
              <div
                class="p-5 d-flex col-12 justify-content-center align-items-center"
              >
                <div class="d-flex">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="44"
                    height="44"
                    fill="currentColor"
                    class="t-muted bi bi-lightbulb"
                    viewBox="0 0 16 16"
                  >
                    <path
                      d="M2 6a6 6 0 1 1 10.174 4.31c-.203.196-.359.4-.453.619l-.762 1.769A.5.5 0 0 1 10.5 13a.5.5 0 0 1 0 1 .5.5 0 0 1 0 1l-.224.447a1 1 0 0 1-.894.553H6.618a1 1 0 0 1-.894-.553L5.5 15a.5.5 0 0 1 0-1 .5.5 0 0 1 0-1 .5.5 0 0 1-.46-.302l-.761-1.77a1.964 1.964 0 0 0-.453-.618A5.984 5.984 0 0 1 2 6zm6-5a5 5 0 0 0-3.479 8.592c.263.254.514.564.676.941L5.83 12h4.342l.632-1.467c.162-.377.413-.687.676-.941A5 5 0 0 0 8 1z"
                    />
                  </svg>
                  <p class="ps-2 t-md t-semi-bold text-white">
                    Create idea
                    <br />
                    <span class="t-muted t-sm t-medium"
                      >And realize with friends</span
                    >
                  </p>
                </div>
              </div>
              <div class="pb-3 ps-4 pe-4">
                <form asp-action="idea" asp-controller="create">
                    <div>
                        <input hidden value="@User.Identity.Name" name="idea.Author"/>
                    </div>
                  <div class="mb-2">
                    <input
                      name="idea.Title"
                      class="radius-lg bg-dark text-white t-md t-semi-bold form-control me-0 pe-1"
                      placeholder="Title"
                      aria-label="Search"
                    />
                  </div>
                  <div class="mb-2">
                    <textarea
                      name="idea.Description"
                      style="resize: none; height: 66px;"
                      class="radius-lg bg-dark border text-white t-md t-semi-bold form-control me-0 pe-1"
                      placeholder="Title"
                      aria-label="Search"
                    ></textarea>
                  </div>
                  <div class="mb-2">
                    @await Component.InvokeAsync("TagList");
                    <span class="t-sm t-medium t-muted">Choice some taghs</span>
                  </div>
                  <div class="mb-2 mt-3 form-check">
                    <input  type="checkbox" name="idea.IsSecret" value="true" class="form-check-input" id="flexSwitchCheckDefault" />
                    <span>
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="22"
                        height="22"
                        fill="currentColor"
                        class="t-muted bi bi-lock"
                        viewBox="0 0 16 16"
                      >
                        <path
                          d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2zM5 8h6a1 1 0 0 1 1 1v5a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1V9a1 1 0 0 1 1-1z"
                        />
                      </svg>
                    </span>
                    <span
                      class="text-white t-md t-semi-bold form-check-label"
                    >
                      Security idea
                    </span>
                    <br />
                    <span class="t-sm t-medium t-muted">Choice some taghs</span>
                  </div>
                  <div class="border-top pt-3 mt-4 col-12 text-center">
                    <button class="btn t-bold t-primary">Create</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
